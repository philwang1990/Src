<script type="text/javascript">
   function UserAuth() {
       $.ajax({
            url: _root_path + 'Login/AuthenAsync',
            type: 'GET',
            data: {
              Email: $('#email').val(), Password: $('#password').val()
            },
            error: function(xhr) {aa1a
              alert('Ajax request 發生錯誤');
            },
            success: function(result) {
                if(result.status == "OK") {
                    window.location.href = result.url;
                }
                else {
                    alert(result.msg);
                }
            }
          });
   }

</script>