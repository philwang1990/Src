@page
@{
    Layout = "_LayoutShell";
}

@section Stylesheet{

    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/simple-line-icons.css">
    <link rel="stylesheet" href="~/css/webfont/zh-tw.css">
