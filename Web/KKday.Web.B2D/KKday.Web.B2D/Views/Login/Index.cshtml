}

<div class="login-body">
    @*style="background-image: url(/images/bg_login.jpg)"*@
    <div class="page-wrap login-wrap">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-4 col-md-offset-3 col-md-6 col-sm-8 col-sm-offset-2">
                    <form id="login-form" method="post" role="form" style="display: block;">
                        <div class="board">
                            <h1 class="title">登入</h1>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" id="email" class="form-control" placeholder="Email" value="south@ymail.com" tabindex="1">
                            </div>
                            <div class="form-group has-error">
                                <label>密碼</label>
                                <a href="@Url.Content("~/Login/ForgetPassword")" tabindex="5" class="btn-link pull-right">忘記密碼？</a>
                                <input type="password" id="password" class="form-control" placeholder="Password" value="88888888" tabindex="2">
                                @*<div class="tip">密碼錯誤</div>*@
                            </div>

                            <div class="form-group">
                                <label>
                                    <input type="checkbox" tabindex="3">
                                    記得我
                                </label>
                            </div>
                            @*<a href="#" class="btn btn-primary btn-block" tabindex="4">登入</a>*@
                            <input type="button" name="login-submit" id="login-submit" tabindex="4" class="btn btn-primary btn-block" value="Log In" onclick="UserAuth();">
                            <div class="text-center mt-20">
                                還不是會員？<a href="register.html">免費註冊</a>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

