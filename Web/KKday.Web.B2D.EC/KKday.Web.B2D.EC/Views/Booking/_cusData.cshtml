                                 <option :value="null" disabled selected="selected">
                                     @prodTitle.booking_step1_cust_data_unit
                                 </option>
                                 @foreach (Unit u in cusData.shoe_size.man.unit_list)
                        {
                            var uCode = u.unit_code + "_" + u.size_range_start + "_" + u.size_range_end;
