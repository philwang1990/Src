@using KKday.Web.B2D.EC.Models.Model.Product
@using KKday.Web.B2D.EC.Models.Model.Booking

@{
    Layout = "_LayoutBooking";
}
@section Scripts{

    <meta charset="utf-8">
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <title>Booking Step1 - KKday.com</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=0">
    <link href="img/favicon.png" rel="shortcut icon" type="image/ico">
    <link rel="stylesheet" href="~/css/flat-ui.css" type="text/css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/simple-line-icons.css" type="text/css">
    <link rel="stylesheet" href="~/css/daterangepicker.css">
    <!--Intel Tel-->
    <link rel="stylesheet" href="~/css/intlTelInput.css" type="text/css">
    <link rel="stylesheet" href="~/css/custom.css" type="text/css">
    <style>

        .error_msg {
            color: Red;
        }
    </style>

    <script type="text/javascript">

        $(function () {

        });</script>
}


@{
    var chkSuccess = (Boolean)ViewData["chkSuccess"];
    var prodShow = (BookingShowProdModel)ViewData["prodShow"];
    var orderData = (DataModel)ViewData["orderData"];
    var prodTitle = (ProdTitleModel)ViewData["prodTitle"];
}
<section id="bookingWrapper" class="booking-wrap">
    <div class="container">
        @if (chkSuccess == true)
        {
          <ol class="breadcrumb">
            <li>@prodTitle.common_confirmation </li>
            <li>@prodTitle.common_payment </li>
            <li class="active">@prodTitle.common_done </li>
          </ol>
        }
        else
        {
            <ol class="breadcrumb">
            <li>@prodTitle.common_confirmation </li>
            <li class="active">@prodTitle.common_payment </li>
            <li>@prodTitle.common_done </li>
          </ol>
        }
        <div calss="row">
            <div class="col-md-8 col-sm-9">
                <h3 class="booking-msg">

                    @if (chkSuccess == true)
                    {
                       <div class="symbol">
                         <i class="icon-check icons"></i>
                       </div>
                       @prodTitle.common_payment_successful
                       <div>
                       @prodShow.confirm_order_time
                       </div>
                    }
                    else
                    {
                       <div class="symbol">
                         <i class="fa fa-credit-card ipushsRightTarget"></i>
                       </div>
                       @prodTitle.booking_cancel_pay_fail <i class="fa fa-frown-o"></i>
                    }

                </h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 col-sm-9">
                <!--contactData-->

                <div class="orderContactData board active" id="board1">
                    @await Html.PartialAsync("_orderContactData")
                </div>
                @*<div class="board active" id="board2">

                    </div>
                    <div class="board" id="board3">

                    </div>*@
            </div>
        </div>
    </div>

    <!--action-->
    @await Html.PartialAsync("_prodShow")
</section>