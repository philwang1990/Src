@using KKday.Web.B2D.BE.Models.Model.Common
@using KKday.Web.B2D.BE.Models.Model.PriceSetting
@using Resources
@inject ILocalizer localizer
@model List<B2dDiscountCurrAmt>
@{
    var mst_xid = (Int64)ViewData["MST_XID"];
    var query_params = ViewData["CUR_AMT_QUERY_PARAMS"] as QueryParamsModel;
}

@if (Model == null || Model.Count() < 1)
{
    <span>@localizer.Text.Data_Not_Found</span>
}
else
{

    <table id="tbl_2" class="table table-bordred table-striped fit">
        <thead>
            <tr>
                <th><input type="checkbox" id="checkall" /></th>
                <th>ID</th>
                <th>Currency</th>
                <th>Amount</th>
                <th>@localizer.Text.Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><input type="checkbox" class="checkthis" value="@item.XID" aria-label="Select discount" title="Select discount in this table" /></td>
                    <td><a href="#" data-toggle="modal" data-target="#edit_curramt" data-filtre="@item.XID">@item.XID</a></td>
                    <td>@item.CURRENCY_DESC (@item.CURRENCY)</td>
                    <td>@item.AMOUNT</td>
                    <td>
                        <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete_curramt" onclick="$('#del_curramt_xid').val(@item.XID);">
                            <span class="glyphicon glyphicon-trash"></span>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="col-xs-12">
        <ul class="pagination pull-right">

            @if (query_params.Paging.total_pages > 1)
            {
                <li><a href="javascript:void(0);" onclick="RefreshCurrAmt(1, false);"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
            }
            @for (int nIdx = 0; nIdx < query_params.Paging.total_pages; nIdx++)
            {
                var pgIdx = nIdx + 1;
                if (pgIdx == query_params.Paging.current_page)
                {
                    <li class="active"><a href="javascript:void(0);">@pgIdx</a></li>
                }
                else
                {
                    <li><a href="javascript:void(0);" onclick="RefreshCurrAmt(@pgIdx, false);">@pgIdx</a></li>
                }
            }
            @if (query_params.Paging.total_pages > 1)
            {
                <li><a href="javascript:void(0);" onclick="RefreshCurrAmt(@query_params.Paging.total_pages, false);"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
            }
        </ul>
    </div>

}