@using KKday.Web.B2D.BE.Models.Model.Account
@using Resources
@inject ILocalizer localizer
@model B2dAccount
@{
    Layout = "_layoutMain";
}
@section Scripts {
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Content("~/User")">Home</a></li>
        <li class="breadcrumb-item" aria-current="page">@localizer.Text.Title_WebUser</li>
        <li class="breadcrumb-item active" aria-current="page">@localizer.Text.Title_WebUserProfile</li>
    </ol>
</nav>
<div class="container">
    <input type="hidden" id="xid" value="@Model.XID" />

    <div class="row">
        <div class="col-xs-12 col-sm-8">
            <h4>@localizer.Text.Title_WebUserProfile</h4>

        <div class="col-xs-12">
            <span style="font-size: 1.08em; display: block; margin: 16px 0 16px 0; color:#0174DF;">
                @Model.COMPANY_NAME
            </span>
            <ul id="myTab" class="nav nav-tabs hidden-xs" style="margin-bottom: 15px;">
                <li class="active">
                    <a href="#profile" data-toggle="tab" class="js-tabcollapse-panel-heading" data-parent="" aria-expanded="true">@localizer.Text.UserProfile</a>
                </li>
                <li class="">
                    <a href="#password" data-toggle="tab" class="js-tabcollapse-panel-heading collapsed" data-parent="" aria-expanded="false">@localizer.Text.ChangePassword</a>
                </li>
            </ul>
        </div>

        <div class="panel-group visible-xs" id="myTab-accordion"></div>
                <div id="myTabContent" class="tab-content hidden-xs">
                    <div class="tab-pane fade active in" id="profile">
                        <form id="form1">
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <label>@localizer.Text.Email / @localizer.Text.Account</label>
                                    <div class="form-control">@Model.EMAIL</div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <label>@localizer.Text.NameLast<span class="text-danger">*</span></label>
                                    <input type="text" id="name_last" name="name_last" class="form-control" value="@Model.NAME_LAST">
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <label>@localizer.Text.NameFirst<span class="text-danger">*</span></label>
                                    <input type="text" id="name_first" name="name_first" class="form-control" value="@Model.NAME_FIRST">
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <label>@localizer.Text.GenderTitle</label>
                                    <select id="gender_title" name="gender_title" class="form-control">
                                        <option value="">@Model.GENDER_TITLE</option>
                                        <option value="miss">Miss</option>
                                        <option value="mr">Mr</option>
                                        <option value="mrs">Mrs</option>
                                        <option value="ms">Ms</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <label>@localizer.Text.Tel<span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <div type="text" class="form-control">+@Model.TEL_AREA</div>
                                        <input type="text" id="tel" name="tel" class="form-control" value="@Model.TEL" placeholder="@localizer.Text.Search_Tel" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <label>@localizer.Text.JobTitle</label>
                                    <input type="text" id="job_title" class="form-control" value="@Model.JOB_TITLE" placeholder="@localizer.Text.Search_JobTitle">
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <label>@localizer.Text.Department</label>
                                    <input type="text" id="department" class="form-control" value="@Model.DEPARTMENT" placeholder="@localizer.Text.Search_Department">
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <label>@localizer.Text.UserType<span class="text-danger">*</span></label>
                                    <select id="user_type" name="user_type" class="form-control">
                                        <option value="00">@localizer.Text.UserRole_00</option>
                                        <option value="01">@localizer.Text.UserRole_01</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="form-group">
                                    <label>@localizer.Text.Status</label>
                                    <select id="status" name="status" class="form-control">
                                        <option value="False">@localizer.Text.Disable</option>
                                        <option value="True">@localizer.Text.Enable</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-12 text-center">
                                <button type="button" class="btn btn-success" onclick="UpdateAccount();">  @localizer.Text.Update</button>
                                <button type="button" class="btn btn-default" onclick="window.history.go(-1);">  @localizer.Text.Cancel</button>
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="password">
                        <form method="post" id="form_pw" onsubmit="return CheckPassword();">
                            <input type="hidden" id="uuid" name="uuid" value="@ViewData["UUID"]" />
                            <div class="col-xs-8">
                                <input type="password" id="upd_password" name="upd_password" class="form-control" style="margin-bottom:8px;" placeholder="@localizer.Text.NewPassword" autocomplete="off">
                            </div>
                            <div class="col-xs-8">
                                <input type="password" id="upd_password_again" name="upd_password_again" class="form-control" style="margin-bottom:8px;" placeholder="@localizer.Text.PasswordAgain" autocomplete="off">
                            </div>
                            <div class="col-xs-8">
                                <input type="button" class="col-xs-12 btn btn-primary btn-load" onclick="UpdPassword();" value="@localizer.Text.ChangePassword">
                            </div>
                        </form>
                    </div>
                </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $.validator.addMethod("phoneStyle", function( value, element ) {
       var str = value;
       var result = false;

       if(str.length > 0){
           var patt_phone = /^[\d\-\(\)\#]{1,}$/;
           result = patt_phone.test(str);
       }
       else result = true;

       return result;
   }, "電話號碼不符合格式，僅接受數字、#-()等符號");


    $(function(){
        $("#gender_title").val('@Model.GENDER_TITLE');
        $("#user_type").val('@Model.USER_TYPE');
        $("#status").val('@Model.ENABLE');
        
        //初始化驗證規則
        $('#form').validate({
            rules:{
                gender_title: "required",
                name_last: "required",
                name_first: "required",
                tel: {required: true,phoneStyle:true},
                user_type: "required",
                status: "required",
            },

            messages:{
                gender_title:"不可為空",
                name_last:"不可為空",
                name_first:"不可為空",
                tel:{required:"不可為空"},
                user_type:"不可為空",
                status:"不可為空" 
            }
        });

        //初始化驗證規則
        $('#form_pw').validate({
            rules:{
                    upd_password: {required: true,rangelength:[8,12]},
                    upd_password_again: {required: true,rangelength:[8,12],equalTo:"#upd_password"}
            },
            messages:{
                upd_password:{required:"不可為空",rangelength:"密碼須介於8至12位數"},
                upd_password_again:{required:"不可為空",rangelength:"密碼須介於8至12位數",equalTo:"密碼不相符"}
            }
        });
    });

    function UpdateAccount()
    {
        if(!confirm('Are you sure to update account profile?')) return false;

        if($('#form1').valid()){

        var userObj = { xid : $("#xid").val(),
            email : '@Model.EMAIL',
            name_first :$("#name_first").val(),
            name_last :$("#name_last").val(),
            department: $("#department").val(),
            tel :$("#tel").val(),
            gender_title :$("#gender_title").val(),
            job_title :$("#job_title").val(),
            user_type :$("#user_type").val(),
            enable : $("#status").val() == "True" ? true : false
        };

        console.log("account: " + JSON.stringify(userObj));

        $.ajax({
            type: "POST",
            url: _root_path + "Account/UpdateProfile",
            contentType: "application/json",
            data: JSON.stringify(userObj),
            dataType: "json",
            error: function (jqXHR, textStatus, errorThrown) {
                // console.log("jqXHR => respText: " + jqXHR.responseText + ", status: " + jqXHR.status + ", readyState: " + jqXHR.readyState + ", statusText: " + jqXHR.statusText);
                console.log("textStatus: " +textStatus + ", error: " + errorThrown);
            },
            success: function (result) {
                // console.log("result: " + JSON.stringify(result));
                if(result == "OK") {
                    alert("Update OK!");
                    window.location.href = "@Url.Content("~/User/Account/WebUser")";
                    @*window.history.go(-1);
                    var newForm = $('<form>', {
                        'action': _root_path + "Account",
                        'target': '_self',
                        'method': 'post'
                    }).append(jQuery('<input>', {
                        'name': 'query',
                        'value': '@ViewData["QueryParams"]',
                        'type': 'hidden'
                    }));
                    newForm.submit()*@
                } else {
                    alert("Error: " + result.msg);
                }
            }
        });
        }

        else alert('請確認資料是否填寫正確');
        return false;
    }

    function UpdPassword()
    {
            if($('#form_pw').valid()){

                //var Obj = { uuid: $('#uuid').val(),
                //upd_password :$('#upd_password').val() };

                $.ajax({
                    type: "POST",
                    url: _root_path + "Account/UpdatePassword",
                    data: { mail: '@Model.EMAIL',password :$('#upd_password').val()},
                    error: function (jqXHR, textStatus, errorThrown) {
                    console.log("textStatus: " +textStatus + ", error: " + errorThrown);
                    },
                    success: function (result) {
                        // console.log("result: " + JSON.stringify(result));
                        if(result.status == "OK") {
                            alert("Update OK!");
                            window.history.go(-1);
                        } 
                        else {
                            alert("Error: " + result.msg);
                        }
                    }
                });
            }

            else alert('請確認資料是否填寫正確');
            return false;
    }

</script>